<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receive_message"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/tv_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_receive_message"
        android:fontFamily="@font/texpisans_light"
        android:text="Hello fucking chicken"
        android:textSize="17sp"
        android:textColor="@color/dark_text"/>

    <TextView
        android:id="@+id/tv_time_receive_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_receive_message"
        android:layout_alignBottom="@id/tv_receive_message"
        android:layout_gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:text="11:23"
        android:textSize="12sp"
        android:fontFamily="@font/texpisans_light"
        android:alpha="0.5"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>