<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="20dp"
    android:paddingLeft="5dp"
    android:paddingVertical="2dp"
    android:id="@+id/bg_menu_message">

    <LinearLayout
        android:id="@+id/linear_layout_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:paddingRight="10dp"
        android:layout_gravity="">

        <ImageView
            android:id="@+id/iv_copy"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_copy"
            android:paddingVertical="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copy"
            android:textSize="17sp"
            android:fontFamily="@font/texpisans_light"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:paddingRight="10dp"
        android:layout_gravity="">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:paddingVertical="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="17sp"
            android:fontFamily="@font/texpisans_light"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:layout_gravity="">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic__85_trash_bin_outline"
            android:paddingVertical="5dp"
            android:paddingRight="5dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="17sp"
            android:fontFamily="@font/texpisans_light"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>